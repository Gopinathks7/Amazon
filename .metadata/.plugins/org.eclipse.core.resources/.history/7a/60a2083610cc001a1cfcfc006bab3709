package com.common;

import org.apache.log4j.Logger;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import com.generic.Property;

public class BasePage 
{
	
	public Logger log=Logger.getLogger(this.getClass());
	  public WebDriver driver;
	  public String strConfigFile;
	  public long timeout;
	  
	  public BasePage(WebDriver driver){
		  this.driver=driver;
		  strConfigFile=AutomationConstants.CONFIG_PATH+AutomationConstants.CONFIG_FILE;
		  timeout=Long.parseLong(Property.getPropertyValue(strConfigFile, "EXPLICIT"));
	  }
	  
	  public void verifyURLis(String expectedUrl){
		  new WebDriverWait(driver,timeout).until(ExpectedConditions.urlToBe(expectedUrl));
	  }
	  
	  public void verifyURLhas(String strExpectedUrl){
		  new WebDriverWait(driver,timeout).until(ExpectedConditions.urlContains(strExpectedUrl));
	  }
	  public void moveToElements(WebElement elemen)
	  {
		  Actions action=new Actions(driver);
		  action.moveToElement(elemen);
	  }
}
